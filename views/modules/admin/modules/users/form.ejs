<div class="container">

	<h1><%- __(`User_edit`) %></h1>

	<%- include('../../menu'); %>
	
	<ul class="static_menu">
		<li>
			<a class="active" href="#block1" data-items=".profile_item">Роли пользователя</a>
		</li>
		<li>
			<a href="#block2" data-items=".profile_item">Профиль пользователя</a>
		</li>
		<li>
			<a href="#block3" data-items=".profile_item">Заявки пользователя</a>
		</li>
	</ul>

	<div>

	<form id="block1" method="POST" class="update_form ajax_form profile_item" action="/action/profile/update/<%=user.id%>">

		<div class="form_block">
			
			<div class="form-group">
				<label>Email</label>
				<p><%= user.email %></p>
			</div>
			<div class="form-group">
				<label>Original Email</label>
				<p><%= user.originalEmail %></p>
			</div>

			<h2>Роли</h2>
			<h3>Управление порталом</h3>
			
			<div class="radiobuttons">
				<label>
					<input type="radio" name="role" value="admin" <%- user.role === 'admin' ? 'checked=""' : "" %>>
					<span>Administrator</span>
				</label>
				<label>
					<input type="radio" name="role" value="user" <%- user.role === 'user' ? 'checked=""' : "" %>>
					<span>User</span>
				</label>
			</div>

		</div>

		<input type="submit" value="<%= __('update') %>">

	</form>

		<form id="block2" style="display: none" method="POST" class="update_form ajax_form profile_item" action="/action/profile/update/<%=user.id%>">

			<div class="form_block">
				<h2><%- __('Photo') %></h2>
				<div class="form-group form-group-image-pick">
					<label><%- __("Avatar") %></label>
					<div class="image_pick_area active">
						<input class="image_pick" data-ratio="1:1" type="file" accept="image/">
						<img src="<%= user.image ? `/uploads${user.image}` : '/uploads/default/profile.svg' %>">
						<input type="hidden" class="hidden_image_url" value="<%=user.image%>" name="image" />
						<a class="upload_new_image" data-del-url="<%=user.image%>" href="#"><%- __("upload_new_image") %></a>
					</div>
				</div>
			</div>

			<div class="form_block">
				<h2><%- __('Contacts_information') %></h2>
				<div class="form-group">
					<label><%- __("Name") %></label>
					<input type="text" name="name" value="<%= user.name %>"/>
				</div>
				<div class="form-group">
					<label><%- __("Surname") %></label>
					<input type="text" name="surname" value="<%= user.surname %>"/>
				</div>
				<div class="form-group">
					<label>Skype</label>
					<input type="text" name="skype" value="<%= user.skype %>"/>
				</div>
				<div class="form-group">
					<label>Email</label>
					<input type="text" name="email" autocomplete="off" value="<%= user.email %>"/>
				</div>
				<div class="form-group">
					<label>Original Email</label>
					<p><%= user.originalEmail %></p>
				</div>
				<div class="form-group">
					<label><%- __("Phone") %></label>
					<div id="phone" data-phone="<%= user.phone %>"></div>
				</div>
				<div class="form-group">
					<label><%- __("Timezone") %></label>
					<select name="timezone" value="<%= user.timezone %>">
						<% timezoneJson.map((el) => { %>
							<option value="<%= el.value %>" <%- el.value === user.timezone ? 'selected' : '' %>><%- el.text %></option>
						<% }); %>
					</select>
				</div>
			</div>

			<input type="submit" value="<%= __('update') %>">

		</form>

	</div>

</div>