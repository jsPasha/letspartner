<div class="container">

	<h1><%- __(`News_page_settings`) %></h1>

	<%- include('../../menu'); %>

	<div>

		<form method="POST" class="settings_form update_form" action="/action/admin/page-settings/news">

			<% locales.forEach((lang, i) => { %>
				<div class="form-group">
					<label for="name_<%-lang%>"><%- __("Name") %> <%-lang%></label>
					<textarea maxlength="200" <%= i === 0 ? 'required' : '' %> id="name_<%-lang%>" name="name[<%-lang%>]" rows="2"><%- page.name[lang] %></textarea>
				</div>
			<% }); %>

			<% locales.forEach((lang, i) => { %>
				<div class="form-group">
					<label for="description_<%-lang%>"><%- __("Description") %> <%-lang%></label>
					<textarea maxlength="200" id="description_<%-lang%>" name="description[<%-lang%>]" rows="6"><%- page.description[lang] %></textarea>
				</div>
			<% }); %>
			
			<div class="form-group form-group-image-pick">
				<label><%- __("News_main_image") %></label>
				<div class="image_pick_area<%- (page.image) ? ' active' : '' %>">
					<input class="image_pick" type="file" accept="image/">
					<%-(page.image) ? `<img src="/uploads${page.image}">` : ''%>
					<input type="hidden" class="hidden_image_url" value="<%=(page.image) ? page.image : ''%>" name="image" />
					<a class="upload_new_image" data-del-url="<%- page.image %>" href="#"><%- __("upload_new_image") %></a>
					<a class="delete_image" data-url="<%- page.image %>" href="#"><%- __("delete_image") %></a>				
				</div>
			</div>

			<input type="submit" value="<%= __('save') %>">

		</form>

	</div>

</div>